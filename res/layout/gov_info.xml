<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" android:focusable="false" android:paddingLeft="10dp" android:paddingBottom="8dp">
<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:focusable="false" android:id="@+id/gov_icon" android:layout_gravity="center_vertical" android:layout_marginRight="8dp"></ImageView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:focusable="false" android:id="@+id/gov_name" android:textColor="#fff" android:textSize="22sp"></TextView>
</LinearLayout>
